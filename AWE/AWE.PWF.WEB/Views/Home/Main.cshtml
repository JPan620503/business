@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height:100% !important;">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Theme/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Theme/css/font-awesome.min.css" rel="stylesheet" />*@
    <link href="~/Theme/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Theme/css/default.css" rel="stylesheet" />
    <script src="~/Theme/scripts/jquery-1.10.2.min.js"></script>
    <title>仓储管理系统</title>
    <style>
        .blocka { display: none; }
    </style>
    <!--JSFile-->
    <script type="text/javascript">
        $(function () {
            $("#li").on('click', function () {
                $(this).addClass('active').siblings('li').removeClass('active');
                $(this).children().siblings("ul").toggleClass('blocka');
                $(this).children().siblings("fa fa-caret-left").removeClass('fa fa-caret-left').addClass('fa fa-caret-down');
                return false;
            });
        });
    </script>
</head>
@*当content内容的margin大于45时，样式错位【重点BUG】*@
<body style="background-image: url('../../Theme/images/bg-default.png') !important; background-color:#3c3c3c !important;height:100% !important;margin-top:45px;">
    @Html.Partial("_Top")
    <div id="body" style="height:100% !important;margin-top:45px;">
        <div id="sidebar" style="height:100% !important;overflow:visible;position:absolute;">
            <ul>
                <li id="li" class="">
                    <a href="javascript:void(0)">
                        <i class="glyphicon glyphicon-user"></i>
                        <span class="title">系统设置</span>
                        <span class="fa fa-caret-left" style="float:right;margin-top:3px;"></span>
                    </a>
                    <ul class="sub" style="padding-left:0;">
                        <li><a href="javascript:void(0)">权限分配</a></li>
                        <li><a href="javascript:void(0)">菜单管理</a></li>
                    </ul>
                </li>
                <li class="">
                    <a href="javascript:void(0)">
                        <i class="glyphicon glyphicon-camera"></i>
                        <span class="title">基础数据</span>
                        <span class="fa fa-caret-left" style="float:right;margin-top:3px;"></span>
                    </a>
                </li>
            </ul>
        </div>
        <div id="content" style="margin-left: 150px;height:100% !important;margin-top:0px !important;border-bottom:2px solid #ddd; background:#f7f7f7 url('../../Theme/images/body-bg.png');">
            <h1 style="padding:80px;">开发中……</h1>
        </div>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
